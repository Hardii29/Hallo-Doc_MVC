@model Hallo_Doc.Entity.ViewModel.AccountAccess;
@{
    ViewData["Title"] = "Create Access";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="bg-light" id="tableContent">

    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
            <h4 style="font-weight:bold;">Create Access</h4>

            <a class="btn btn-outline-info out back" asp-action="AccountAccess" asp-controller="Admin">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>
        <div class="content">
            <h5 style="font-weight:bold;">Details</h5>
            <div class="row g-2 mt-3">
                <div class="form-group form-floating col-md-6 col-sm-12">
                    <input type="text" id="RoleName" class="form-control" placeholder="RoleName">
                    <label for="RoleName">Role Name</label>
                </div>
                <div class="form-group form-floating col-md-6 col-sm-12">
                    <select class="form-select" id="accountType" name="AccountType">
                        <option value=" ">All</option>
                    </select>
                    <label for="accountType">Account Type</label>
                </div>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input mt-1" name="SelectRegion" type="checkbox" value="true" id="check">
                <label class="form-check-label" for="check">
                    Name
                </label>
            </div>
            <div class="g-2 mt-3" style="text-align: right;">
                <button type="submit" class="btn btn-info text-white btn-lg">Save</button>
                <button type="button" class="btn btn-outline-info btn-lg">Cancel</button>
            </div>
        </div>
    </div>
</body>