@model Hallo_Doc.Entity.ViewModel.Schedule;
@{
    ViewData["Title"] = "Scheduling";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    @Html.Partial("_CreateShift")
