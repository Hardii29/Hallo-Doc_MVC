@model Hallo_Doc.Entity.ViewModel.ForgotPassword;
@{
    ViewData["Title"] = "Forgot Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://use.fontawesome.com/f59bcd8580.js"></script>
    <link href="~/css/AdminLogin.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/a07e852713.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
   
</head>
<body style="margin-bottom: 0px">

    <div class="container-fluid h-100">
        <div class="row m-4 no-gutters shadow-lg">
            <div class="col-md-6 d-none d-md-block">
                <img src="./../images/plateform_login_img.jpg" class="img-fluid" style="min-height:100%;" />
            </div>
            <div class="col-md-6 bg-white p-5">
                <div class="content">
                    <button type="button" class="btn btn-outline-info mode" onclick="darkMode()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon" viewBox="0 0 16 16">
                            <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                        </svg>
                    </button>
                    <div style="margin-bottom: 100px;"><img src="./../images/logo.png" style="text-align: center;" width="150" height="100"></div>
                    <div class="container">
                        <h3>Reset Your Password</h3>
                        <div class="login-form mt-4" style="text-align: center;">
                            <form method="post" asp-action="ForgotPassword" asp-controller="AdminLogin">

                                <div class="form-group form-floating mt-3 fontuser" style="width: 50%; margin: 0 auto;">
                                    <input type="email" name="Email" asp-for="Email" class="form-control" id="email" placeholder="Email">
                                    <label for="email">Email</label>
                                    <i class="fa fa-user-circle-o"></i>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-info btn-lg btn-block" style="width: 50%; color: white;">Reset Password</button>
                                <div class="mt-3">
                                    <a class="forgot" asp-action="AdminLogin" asp-controller="AdminLogin"><i class="fa-solid fa-chevron-left me-2"></i>Back To Login</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>