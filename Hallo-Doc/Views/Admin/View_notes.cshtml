
@{
    ViewData["Title"] = "View Note";
    Layout = "~/Views/Shared/_AdminActionLayout.cshtml";
}

<head>   
    <link rel="stylesheet" href="~/css/view-notes.css">
    
</head>

<body class="bg-light">

    <div style="padding-bottom: 9%;" class="container mb-3">
        <div class="flex-row d-flex py-3 mr-2 justify-content-between">

            <div class="d-flex">
                <p class="h4">Notes</p>
            </div>

            <div class="ml-auto">
                <button type="button" class="btn btn-outline-info" onclick="goBack()">
                    &lt;&nbsp;Back
                </button>
            </div>

        </div>

        <div class="row px-3 pb-3">

            <div style="border:5px solid #edf4f4;" class="bg-white px-3 py-3 border-4 rounded-3 mr-5 mt-3 notdiv">
                <div class="d-flex flex-row">
                    <div class="my-auto mr-2">
                        <i class="fa fa-right-left" aria-hidden="true"></i>
                    </div>
                    <div class="ml-3">
                        <p class="fs-6 fw-bold mb-0">Transfer Notes</p>
                        <p class="mb-0 ptxt">Admin transferred to Dr.AGOLA on 27/09/2023 at 9:38:04 AM : test assign</p>
                    </div>
                </div>
            </div>

            <div style="border:5px solid #edf4f4;" class="bg-white px-3 py-3 border-4 rounded-3 mt-3 notdiv">
                <div class="d-flex flex-row">
                    <div class="my-auto mr-2">
                        <i class="fa fa-user-doctor" aria-hidden="true"></i>
                    </div>
                    <div class="ml-3">
                        <p class="fs-6 fw-bold mb-0 ptxt">Physician Notes</p>
                        <p class="mb-0 ptxt">test add, concluded</p>
                    </div>
                </div>
            </div>

            <div style="border:5px solid #edf4f4;" class="bg-white px-3 py-3 mt-3 border-4 rounded-3 notdiv">
                <div class="d-flex flex-row">
                    <div class="my-auto mr-2">
                        <i class="fa fa-user-tie" aria-hidden="true"></i>
                    </div>
                    <div class="ml-3">
                        <p class="fs-6 fw-bold mb-0 ptxt">Admin Notes</p>
                        <p class="mb-0 ptxt">-</p>
                    </div>
                </div>
            </div>
        </div>
 <div style="border:5px solid #edf4f4;" class="bg-white px-3 pb-3 border-4 rounded-3">

            <div class="row pt-2 mt-2 mb-3">

                <div class="col-md-12">
                    <div class="form-group form-floating mt-2">
                        <textarea style="height: 150px;" class="form-control" placeholder="Patient Notes"></textarea>
                        <label>Admin Notes</label>
                    </div>
                </div>

                <div class="d-flex pt-2 justify-content-end">
                    <button type="button" class="btn btn-info text-white mr-2">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

</body>
