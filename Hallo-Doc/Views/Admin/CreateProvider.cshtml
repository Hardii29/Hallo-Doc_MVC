@model Hallo_Doc.Entity.ViewModel.Provider;
@{
    ViewData["Title"] = "Create Provider Account";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="bg-light">

    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
            <h4 style="font-weight:bold;">Create Provider Account</h4>

            <a class="btn btn-outline-info out back" asp-action="ProviderMenu" asp-controller="Admin">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>
        <div class="content">
            <form asp-controller="Provider" asp-action="CreateProvider" method="post">

                <div class="row">
                    <h6 class="mt-2">Account Information</h6>

                    <div class="row g-2">
                        <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <input type="text" name="UserName" id="UserName" asp-for="UserName" class="form-control" placeholder="UserName">
                            <label for="UserName">User Name (MD.LastName.f)</label>
                        </div>
                        <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <input type="text" name="Password" id="Password" asp-for="Password" class="form-control" placeholder="Password">
                            <label for="Password">Password</label>
                        </div>
                        
                        <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <select class="form-select" id="role" name="RoleId" asp-for="RoleId" asp-items="@(new SelectList(ViewBag.Roles,"RoleId","Name"))">
                                <option value="">Select Role</option>
                            </select>
                            <label for="role">Role</label>
                        </div>
                    </div>
                   
                </div>

                <div class="row">
                    <h6 class="mt-2">Administrator Information</h6>
                    <div class="row g-2">
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="FirstName" id="firstName" asp-for="FirstName" class="form-control" placeholder="First name" aria-label="First name">
                            <label for="firstName">FirstName</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="LastName" id="lastName" asp-for="LastName" class="form-control" placeholder="Last name" aria-label="Last name">
                            <label for="lastName">Lastname</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="email" name="Email" id="email" asp-for="Email" class="form-control" placeholder="Email">
                            <label for="email">Email</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="tel" name="Mobile" id="mobile" asp-for="Mobile" class="form-control" placeholder="123-45-67">

                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="MedicalLicense" id="mdLicense" asp-for="MedicalLicense" class="form-control" placeholder="MedicalLicense">
                            <label for="mdLicense">Medical License#</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="NPI" id="npi" asp-for="NPI" class="form-control" placeholder="NPI">
                            <label for="npi">NPI Number</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input mt-1" name="RegionId" asp-for="Region" type="checkbox" value="1" id="rg1">
                                <label class="form-check-label" for="rg1">
                                    Ahmedabad
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input mt-1" name="RegionId" asp-for="Region" type="checkbox" value="2" id="rg2">
                                <label class="form-check-label" for="rg2">
                                    New Delhi
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input mt-1" name="RegionId" asp-for="Region" type="checkbox" value="3" id="rg3">
                                <label class="form-check-label" for="rg3">
                                    Mumbai
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input mt-1" name="RegionId" asp-for="Region" type="checkbox" value="4" id="rg4">
                                <label class="form-check-label" for="rg4">
                                    Kolkata
                                </label>
                            </div>
                        </div>
                      
                    </div>
                    <div class="row">
                        <h6 class="mt-2">Mailing & Billing Information</h6>
                        <div class="row g-2">
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <input type="text" name="Address1" id="address1" asp-for="Address1" class="form-control" placeholder="Address1">
                                <label for="address1">Address1</label>
                            </div>
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <input type="text" name="Address2" id="address2" asp-for="Address2" class="form-control" placeholder="Address2">
                                <label for="address2">Address2</label>
                            </div>
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <input type="text" name="City" id="city" asp-for="City" class="form-control" placeholder="City">
                                <label for="city">City</label>
                            </div>
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <select class="form-select" id="state" name="State">
                                    <option value="" selected>Select State</option>
                                    <option value="1">Gujrat</option>
                                    <option value="2">Delhi</option>
                                    <option value="3">Maharashtra</option>
                                    <option value="4">West Bengal</option>
                                </select>
                                <label for="state">State</label>
                            </div>
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <input type="number" name="ZipCode" id="zipCode" asp-for="ZipCode" class="form-control" placeholder="ZipCode">
                                <label for="zipCode">ZipCode</label>
                            </div>
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <input type="tel" name="Mobile" id="mobile2" asp-for="Mobile" class="form-control" placeholder="123-45-67">
                                <label for="mobile2">Mobile</label>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <h6 class="mt-2">Provider Profile</h6>
                        <div class="row g-2">
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <input type="text" name="BusinessName" id="businessName" asp-for="BusinessName" class="form-control" placeholder="BusinessName">
                                <label for="businessName">Business Name</label>
                            </div>
                            <div class="form-group form-floating col-md-6 col-sm-12">
                                <input type="text" name="BusinessWebsite" id="businessWebsite" asp-for="BusinessWebsite" class="form-control" placeholder="BusinessWebsite">
                                <label for="businessWebsite">Business Website</label>
                            </div>
                            <div class="input-group col-md-6 col-sm-12">
                                <input type="file" asp-for="File" class="form-control" placeholder="Select file" aria-label="Select file">
                                <button class="btn btn-info text-white" type="button" for="button-addon2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383" />
                                        <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708z" />
                                    </svg> Upload
                                </button>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group form-floating mt-3">
                                    <textarea style="height: 150px;" class="form-control" placeholder="Admin Notes"></textarea>
                                    <label>Admin Notes</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="border border-dark border-1 m-0 mt-4 dblock" style="width:98%">
                    <div class="row">
                        <h6 class="mt-2">Onbording</h6>
                        <table class="table table-borderless" style="width:100%">
                            <tbody>
                                <tr class=" mt-2">
                                    <td class="col-1" style="text-align:center">
                                        <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        </div>
                                    </td>
                                    <td class="col">Independent Contractor Agreement</td>
                                    <td class="col">
                                        <div class="file btn btn-info text-white" style="position: relative; overflow: hidden;">
                                            Upload
                                            <input type="file" name="File" style="position: absolute; opacity: 0;" />
                                        </div>
                                    </td>
                                    </tr>
                                <tr class=" mt-2">
                                    <td class="col-1" style="text-align:center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        </div>
                                    </td>
                                    <td class="col">Background Check</td>
                                    <td class="col">
                                        <div class="file btn btn-info text-white" style="position: relative; overflow: hidden;">
                                            Upload
                                            <input type="file" name="File" style="position: absolute; opacity: 0;" />
                                        </div>
                                    </td>
                                </tr>
                                <tr class=" mt-2">
                                    <td class="col-1" style="text-align:center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        </div>
                                    </td>
                                    <td class="col">HIPAA Compliance</td>
                                    <td class="col">
                                        <div class="file btn btn-info text-white" style="position: relative; overflow: hidden;">
                                            Upload
                                            <input type="file" name="File" style="position: absolute; opacity: 0;" />
                                        </div>
                                    </td>
                                </tr>
                                <tr class=" mt-2">
                                    <td class="col-1" style="text-align:center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        </div>
                                    </td>
                                    <td class="col">Non-disclosure Agreement</td>
                                    <td class="col">
                                        <div class="file btn btn-info text-white" style="position: relative; overflow: hidden;">
                                            Upload
                                            <input type="file" name="File" style="position: absolute; opacity: 0;" />
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <hr class="border border-dark border-1 m-0 mt-2 dblock" style="width:98%">
                    <div class="g-2 mt-4 first" style="text-align: right;">
                        <button type="submit" id="submitButton" class="btn btn-success text-white">Create Account</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        
        function darkMode() {
            var element = document.body;
            element.classList.toggle("darkMode");
        }

    </script>
</body>