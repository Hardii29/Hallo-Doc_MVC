@model Hallo_Doc.Entity.ViewModel.FamilyReq;
@{
    ViewData["Title"] = "Create_family_req";
    Layout = "~/Views/Shared/_createPatientLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    
    <link href="~/css/create_request.css" rel="stylesheet">
    
</head>
<body class="bg-light">
    
    <div class="container">

        <div class="g-2" style="text-align: right;">
            <a class="btn btn-outline-info out back" asp-action="Create_request" asp-controller="PatientReq">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>
        <div class="content">
            <form asp-action="Create_family_req" asp-controller="PatientReq" method="post">
            <div class="row g-2 first">
                <p class="mt-4">Family/Friend Information</p>
                <div class="row g-2">
                        <div class="form-group form-floating col-md-6 col-sm-12">
                        <input type="text" asp-for="f_firstname" class="form-control" id="f_firstname" placeholder="Your Firstname">
                            <label for="f_firstname">Your Firstname</label>
                            <span asp-validation-for="f_firstname" class="text-danger"></span>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" asp-for="f_lastname" class="form-control" id="f_lastname" placeholder="Your Lastname">
                            <label for="f_lastname">Your Lastname</label>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="tel" asp-for="f_mobile" class="form-control" id="f_mobile" placeholder="123-45-67">
                            <label for="f_mobile">Mobile</label>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="email" asp-for="f_email" class="form-control" id="f_email" placeholder="Your Email">
                            <label for="f_email">Your Email</label>
                            <span asp-validation-for="f_email" class="text-danger"></span>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" asp-for="f_relation" class="form-control" id="f_relation" placeholder="Relation with Patient">
                            <label for="f_relation">Relation with Patient</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 first">
                <p class="mt-4">Patient Information</p>
                    <div class="form-group form-floating mb-3">
                    <textarea class="form-control" id="symptoms" asp-for="Symptoms" placeholder="Enter brief details of your symptoms" style="height:100px"></textarea>
                        <label for="symptoms">Enter brief details of your symptoms</label>
                        <span asp-validation-for="Symptoms" class="text-danger"></span>
                </div>
                <div class="row g-2">
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" asp-for="FirstName" class="form-control" id="First name" placeholder="First name" aria-label="First name">
                            <label for="First name">First name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" asp-for="LastName" class="form-control" id="Last name" placeholder="Last name" aria-label="Last name">
                            <label for="Last name">Last name</label>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="date" asp-for="DOB" class="form-control" id="Date of Birth" placeholder="Date of Birth" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                            <label for="Date of Birth">Date of Birth</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 first">
                <p class="mt-4">Patient Contact Information</p>
                <div class="row g-2">
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="email" asp-for="Email" class="form-control" id="Email" placeholder="Email">
                            <label for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="tel" asp-for="Mobile" class="form-control" id="mobile" style="width:250%">
                          
                    </div>
                </div>
            </div>
            <div class="row g-2 first">
                <p class="mt-4">Patient Location</p>
                <div class="row g-2">
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" asp-for="Street" class="form-control" id="Street" placeholder="street">
                            <label for="Street">Street</label>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" asp-for="City" class="form-control" id="City" placeholder="city">
                            <label for="City">City</label>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" asp-for="State" class="form-control" id="State" placeholder="State">
                            <label for="State">State</label>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="number" asp-for="ZipCode" class="form-control" id="Zip" placeholder="ZipCode">
                            <label for="Zip">ZipCode</label>
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" class="form-control" id="Room" placeholder="Room#/Suite (Optional)">
                            <label for="Room">Room#/Suite (Optional)</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 first">
                <p class="mt-4">(Optional) Upload photo or Document</p>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" placeholder="Select file" aria-label="Select file" id="button-addon2">
                    <button class="btn btn-info text-white" type="button" for="button-addon2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383" />
                            <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708z" />
                        </svg> upload
                    </button>
                </div>
            </div>
            <div class="g-2 mt-4 first" style="text-align: right;">
                <button type="submit" class="btn btn-info text-white">Submit</button>
                <button type="button" class="btn btn-outline-info">Cancel</button>
            </div>
            </form>
        </div>
    </div>
    <script>
        const phoneInputField = document.querySelector("#mobile");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
        function darkMode() {
            var element = document.body;
            element.classList.toggle("darkMode");
        }
    </script>
</body>

</html>