@model Hallo_Doc.Entity.ViewModel.VendorMenu;
@{
    ViewData["Title"] = "Vendor Menu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="modal fade" id="deleteBusinessModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content justify-content-center" style="text-align:center;">

            <form asp-action="DeleteBusiness" asp-controller="AdminNavbar" method="post">
                <input type="hidden" value=" " id="VendorId_modal" name="VendorId" />
                <div class="modal-body m-3">
                    <img class="img-fluid m-2" src="./../images/Confirmation.png" alt="" width="120" height="60">

                    <div class="mb-5">
                        <h3>Confirmation for Delete Business</h3>
                        <p> Are sure you want to clear this Business? </p>
                    </div>

                    <button type="submit" class="btn btn-info text-white">Delete</button>
                    <button type="button" data-bs-dismiss="modal" class="btn btn-outline-info">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<body class="bg-light">
        <div class="flex-row d-flex mt-5 m-3 justify-content-between">
            <h4 style="font-weight:bold;">Vendors</h4>

            <a class="btn btn-outline-info out back" asp-action="Admin_Dashboard" asp-controller="Admin">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>
    <div class="container-custom mt-3">
            <div class="flex-row d-flex mt-2 mb-1 justify-content-between">
                <div class="row g-2">
                    <div class="form-group col-md-6 col-sm-12" style="display: inline-block;">
                        <input type="text" class="form-control" placeholder="Search Vendors" id="searchVendor">
                    </div>
                    <div class="form-group col-md-6 col-sm-12" style="display: inline-block;">
                        <select class="form-select" id="Profession" onchange="handleSearchVendor()" asp-items="@(new SelectList(ViewBag.Professions,"HealthProfessionalTypeId","ProfessionName"))">
                            <option value="">All Professions</option>

                        </select>
                    </div>
                </div>
                <div>
                    <a class="btn btn-outline-info" asp-action="AddBusiness" asp-controller="AdminNavbar"><i class="fa fa-plus" aria-hidden="true"></i> Add Business</a>
                </div>
            </div>
        <div class="table-responsive">
            <table class="table table-hover" style="width:100%">
                <thead class="table-light">
                    <tr style="padding:10px;">
                        <th>Profession</th>
                        <th>Business Name</th>
                        <th>Email</th>
                        <th>Fax Number</th>
                        <th>Phone Number</th>
                        <th>Business Contact</th>
                        <th style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody id="vendorlist">
                    @foreach (var item in Model.data)
                        {
                        <tr class=" mt-2">
                            <td scope="row">@item.Profession</td>
                            <td scope="row">@item.Business</td>
                            <td scope="row">@item.Email</td>
                            <td scope="row">@item.FaxNumber</td>
                            <td scope="row">@item.PhoneNumber</td>
                            <td scope="row">@item.BusinessNumber</td>
                            <td scope="row" style="text-align:center">
                                <a class="btn btn-outline-info btn-sm mr-1" asp-action="EditBusiness" asp-controller="AdminNavbar" asp-route-vendorId="@item.VendorId">Edit</a>
                                <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#deleteBusinessModel" onclick="Deleteid('@item.VendorId')">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
</body>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('searchVendor').addEventListener('keyup', function (evt) {
            if (evt.key === 'Enter') {
                evt.preventDefault();
                handleSearchVendor();
            }
        });
    });
    function handleSearchVendor() {
        var searchValue = $('#searchVendor').val();
        var Profession = $("#Profession").val();
        console.log("Search value: " + searchValue);
        console.log("Profession id: " + Profession);
        $.ajax({
            type: "GET",
            url: '@Url.Action("VendorMenu", "AdminNavbar")',
            data: { searchValue: searchValue, Profession: Profession },
            success: function (data) {
                console.log("AJAX success");
                var bodyContent = $(data).find('tbody').html();
                $('#vendorlist').html(bodyContent);
            },
            error: function (error) {
                console.log("Error:", error);
            }
        });
    }
    function Deleteid(id) {
        var VendorId = id;
        console.log(VendorId);
        document.getElementById('VendorId_modal').value = VendorId;
    }
</script>