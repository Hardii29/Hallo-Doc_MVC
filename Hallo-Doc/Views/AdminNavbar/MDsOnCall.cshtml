@model Hallo_Doc.Entity.ViewModel.MDsOnCall;
@{
    ViewData["Title"] = "MDsOnCall";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<body class="bg-light">

    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
            <h4 style="font-weight:bold;">MDs On Call</h4>

            <a class="btn btn-outline-info out back" asp-action="Admin_Dashboard" asp-controller="Admin">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>

        <div class="flex-row d-flex mt-3 mb-3 justify-content-between">
            <div class="form-group col-lg-4 col-md-6 col-sm-12">
                <select class="form-select" id="SelectedRegion" name="RegionId">
                    <option value="">All Regions</option>
                </select>
            </div>
            <ul>
                <li class="d-inline">
                    <a class="btn btn-info text-white" asp-action="MDOnCall" asp-controller="AdminNavbar">
                        <span class="dash-btn">Calender View</span>
                    </a>
                </li>
                <li class="d-inline">
                    <a class="btn btn-info text-white" asp-action="RequestedShift" asp-controller="AdminNavbar">
                        <span class="dash-btn">Shift For Review</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="content">
            <h5>MD's On Call</h5>
            <div class="g-2 mt-3" style="display:flex;">
                <div class="row g-2">
                    @foreach (var item in Model.data)
                    {
                        if (item.Start <= DateTime.Now && item.End >= DateTime.Now)
                        {
                            if (!string.IsNullOrEmpty(item.Photo))
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <img class="img-fluid mt-3" src="@Url.Action("GetImage", "Admin", new {fileName = item.Photo})" alt="" width="100">
                                    <span>@item.PhysicianName</span>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <img class="img-fluid mt-3" src="/images/user.png" alt="" width="100">
                                    <span>@item.PhysicianName</span>
                                </div>
                            }
                        }   
                    }
                </div>
            </div>

            <h5 class="mt-5">Physicians Off Duty</h5>
            <div class="g-2 mt-3" style="display:flex;">
                <div class="row g-2">
                    @foreach (var item in Model.data)
                    {
                        if (!(item.Start <= DateTime.Now && item.End >= DateTime.Now))
                        {
                            if (!string.IsNullOrEmpty(item.Photo))
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <img class="img-fluid mt-3" src="@Url.Action("GetImage", "AdminNavbar", new {fileName = item.Photo})" alt="" width="100">
                                    <span>@item.PhysicianName</span>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <img class="img-fluid mt-3" src="/images/user.png" alt="" width="100">
                                    <span>@item.PhysicianName</span>
                                </div>
                            }
                        }
                    }                   
                </div>
            </div>
        </div>
    </div>
</body>