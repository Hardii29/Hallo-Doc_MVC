@model Hallo_Doc.Entity.ViewModel.Logs;
@{
    ViewData["Title"] = "Email Logs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="bg-light">
    <div class="flex-row d-flex mt-5 m-3 justify-content-between">
        <h4 style="font-weight:bold;">Email Logs</h4>
        <a class="btn btn-outline-info out back" asp-action="Admin_Dashboard" asp-controller="Admin">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
            </svg> Back
        </a>
    </div>
    <div class="container-custom mt-3">
        <form method="post" id="EmailLogForm" asp-action="EmailLogs" asp-controller="AdminNavbar">
            <div class="row g-2 m-2">
                <div class="form-group form-floating col-lg-2 col-md-6 col-sm-12">
                    <select asp-for="Role" class="form-select form-select-md h-100 p-2" placeholder="Role">
                        <option value="0">Search by Role</option>
                        @foreach (var item in Enum.GetValues(typeof(Hallo_Doc.Entity.ViewModel.AccountType)))
                        {
                            <option value="@((int)item)"> @item.ToString() </option>
                        }
                    </select>
                </div> 
                <div class="form-group form-floating col-lg-2 col-md-6 col-sm-12">
                    <input type="text" asp-for="Recipient" id="receiverName" class="form-control" placeholder="ReceiverName">
                    <label for="receiverName">Receiver Name</label>
                </div>
                <div class="form-group form-floating col-lg-2 col-md-6 col-sm-12">
                    <input type="text" asp-for="Email" id="email" class="form-control" placeholder="Email">
                    <label for="email">Email</label>
                </div>
                <div class="form-group form-floating col-lg-2 col-md-6 col-sm-12">
                    <input type="date" asp-for="CreatedDate" name="CreatedDate" id="createdDate" class="form-control" placeholder="CreatedDate">
                    <label for="createdDate">Created Date</label>
                </div>
                <div class="form-group form-floating col-lg-2 col-md-6 col-sm-12">
                    <input type="date" asp-for="SentDate" name="SentDate" id="sentDate" class="form-control" placeholder="SentDate">
                    <label for="sentDate">Sent Date</label>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-12 d-flex justify-content-end">
                    <div class="m-2 shadow-none">
                        <a class="btn p-2 btn-outline-info text-info bg-white" id="clear" onclick="searchEmailRecord(event)">
                            Clear
                        </a>
                    </div>
                    <div class="m-2 shadow-none">
                        <a class="btn p-2 btn-info text-white" id="search" onclick="searchEmailRecord(event)">
                            Search
                        </a>
                    </div>
                </div>
            </div> 
            <input type="hidden" asp-for="CurrentPage" id="CurrentPage" />
            <input type="hidden" asp-for="PageSize" id="PageSize" />
        </form>
        <div class="table-responsive">
            <table class="table table-hover mt-3" style="width:100%">
                <thead class="table-light">
                    <tr style="padding:10px;">
                        <th>Recipient</th>
                        <th>Action</th>
                        <th>Role Name</th>
                        <th>Email Id</th>
                        <th>Created Date</th>
                        <th>Sent Date</th>
                        <th>Sent</th>
                        <th>Sent Tries</th>
                        <th>Confirmation</th>  
                    </tr>
                </thead>
                <tbody id="emailRecord">
                    @foreach(var item in Model.EmailLog)
                    {
                        <tr class="mt-2">
                            <td scope="row">@item.Recipient</td>
                            <td scope="row">@item.Action</td>
                            <td scope="row">@item.RoleId</td>
                            <td scope="row">@item.Email</td>
                            <td scope="row">@string.Format("{0:MMM dd, yyyy}", item.CreatedDate)</td>
                            <td scope="row">@string.Format("{0:MMM dd, yyyy}", item.SentDate)</td>
                            <td scope="row">@item.IsEmailSent</td>
                            <td scope="row">@item.SentTries</td>
                            <td scope="row">@item.Confirmation</td>
                        </tr>
                    } 
                </tbody>
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation example" class="pagenav flex-row d-flex justify-content-between">

        <div class="d-flex m-3">

            <select id="pageSize" class="form-select form-select-sm" onchange="changePageSize(event)">
                <option value="5" selected>5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
            </select>

        </div>
        <ul class="pagination pagination-container d-flex m-3" id="pagination">
            @{
                int i;

                if (Model.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" data-page="@(Model.CurrentPage - 1)">&lt;</a></li>
                }
                else
                {
                    <li class="page-item disabled"><a class="page-link">&lt;</a></li>
                }
                @for (i = 1; i <= Model.TotalPages; i++)
                {

                    <li class="page-item"><a href="#" data-page="@i" class="@(i == Model.CurrentPage ? "active" : "") page-link">@i</a></li>
                }
                if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item"><a class="page-link" data-page="@(Model.CurrentPage + 1)">&gt;</a></li>
                }
                else
                {
                    <li class="page-item disabled"><a class="page-link">&gt;</a></li>
                }
            }
        </ul>
    </nav>
</body>
<script>
    function searchEmailRecord(event) {
        var btnid = event.target.id;
        console.log(btnid);
        if (btnid == "clear") {
            $('#EmailLogForm').trigger('reset');
            $('#CurrentPage').val(1);
        }
        if (btnid == "search") {
            $('#CurrentPage').val(1);
        }
        var formData = $('#EmailLogForm').serialize();
        $.ajax({
            type: "POST",
            url: '@Url.Action("EmailLogs", "AdminNavbar")',
            data: formData, 
            success: function (data) {
                var bodyContent = $(data).find('tbody').html();
                var page = $(data).find('.pagenav').html();
                $('#emailRecord').html(bodyContent);
                $('#pagination').html(page);
            },
            error: function (error) {
                console.log("Error:", error);
            }
        });
    }
    $(document).on('click', '.page-link', function (event) {
        var page = $(this).data('page');
        console.log(page);
        $('#CurrentPage').val(page);
        searchEmailRecord(event);
    });
    function changePageSize(event) {
        var selectedPageSize = event.target.value;
        $('#CurrentPage').val(1);
        $('#PageSize').val(selectedPageSize); // Add an input field for PageSize in the form
        searchEmailRecord(event);
    }
</script>