@model Hallo_Doc.Entity.ViewModel.AccountAccess;
@{
    ViewData["Title"] = "Account Access";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="modal fade" id="deleteRoleModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content justify-content-center" style="text-align:center;">

            <form asp-action="DeleteRole" asp-controller="AdminNavbar" method="post">
                <input type="hidden" value=" " id="RoleId_modal" name="RoleId" />
                <div class="modal-body m-3">
                    <img class="img-fluid m-2" src="./../images/Confirmation.png" alt="" width="120" height="60">

                    <div class="mb-5">
                        <h3>Confirmation for Delete Role</h3>
                        <p> Are sure you want to delete this Role? </p>
                    </div>

                    <button type="submit" class="btn btn-info text-white">Delete</button>
                    <button type="button" data-bs-dismiss="modal" class="btn btn-outline-info">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<body class="bg-light" id="tableContent">
  
    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
            <h4 style="font-weight:bold;">Account Access</h4>

            <a class="btn btn-outline-info out back" asp-action="Admin_Dashboard" asp-controller="Admin">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>
        <div class="content">
            <div class="g-2 mb-3 first" style="text-align: right;">
                <div>
                    <a class="btn btn-outline-info" asp-action="CreateAccess" asp-controller="AdminNavbar">Create Access</a>
                </div>
            </div>
            <table class="table table-hover" style="width:100%">
                <thead class="table-light">
                    <tr style="padding:10px;">
                        <th class="col-5">Name</th>
                        <th class="col-5">Account Type</th>
                        <th class="col-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.data)
                        {
                       
                    <tr class=" mt-2">    
                        <td class="col-5">@item.RoleName</td>
                            <td class="col-5">@Enum.GetName(typeof(Hallo_Doc.Entity.ViewModel.AccountType), item.Accounttype)</td>
                            <td class="col-2"><a class="btn btn-sm btn-outline-info mr-1" asp-action="EditRole" asp-controller="AdminNavbar" asp-route-RoleId="@item.RoleId">Edit</a>
                                <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#deleteRoleModel" onclick="DeleteRole('@item.RoleId')">Delete</button>
                            </td>
                    </tr> 
                    }
                </tbody>
            </table>
        </div>
    </div>
   
</body>
<script>
    function DeleteRole(id) {
        var RoleId = id;
        console.log(RoleId);
        document.getElementById('RoleId_modal').value = RoleId;
    }
</script>