@{
    ViewData["Title"] = "Patient Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css\bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/patient_dashboard.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .darkMode .content {
            background-color: black;
            color: white;
            box-shadow: 0 4px 8px 0 rgba(256, 256, 256, 0.2), 0 6px 20px 0 rgba(256, 256, 256, 0.19);
        }

        .darkMode .container {
            background-color: black;
            color: white;
        }

        .darkMode th {
            background-color: black;
            color: white;
        }

        .darkMode td {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white flex-column">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="./../images/logo.png" height="65" width="100">
            </a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item d-inline">
                    <p class="navbar-text">Welcome <span style="font-weight: bold;">Hardi</span></p>
                </li>
                <li class="nav-item d-inline">
                    <form class="form-inline my-2 my-lg-0 ">
                        <a class="btn btn-outline-info out back" asp-action="Login" asp-controller="PatientDashboard">Logout</a>

                        <a class="btn btn-outline-info mode" onclick="darkMode()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon" viewBox="0 0 16 16">
                                <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                            </svg>
                        </a>

                    </form>
                </li>
            </ul>

        </div>
        <hr>
        <div class="container-fluid">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active"
                       aria-current="page" href="#">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
            <h3>User Profile</h3>

            <a class="btn btn-outline-info out back" asp-action="Patient_dashboard" asp-controller="Patient">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>
        <div class="content">
            <form>
                <div class="row g-2 first">
                    <p class="mt-4">General Information</p>
                   
                    <div class="row g-2">
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="Firstname" id="FirstName" class="form-control" placeholder="First name" value="Hardi" aria-label="First name" disabled>
                            <label for="FirstName">FirstName</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="Lastname" id="Lastname" class="form-control" placeholder="Last name" value="Jayani" aria-label="Last name" disabled>
                            <label for="Lastname">Lastname</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="date" name="Date Of Birth" id="Date Of Birth" class="form-control" value="29/10/2002" placeholder="Date of Birth" disabled>
                            <label for="Date Of Birth">Date Of Birth</label>
                        </div>
                    </div>
                </div>

                <div class="row g-2 first">
                    <p class="mt-4">Contact Information</p>
                    <div class="row g-2">
                        <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <select class="form-select" name="Mobile" id="Type" disabled>
                                <option value="Mobile">Mobile</option>
                                <option value="Phone">Phone</option>
                            </select>
                            <label for="Type">Type</label>
                        </div>
                        <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <input type="tel" name="Mobile" class="form-control" value="7016398095" placeholder="123-45-67" disabled>
                           
                        </div>
                        <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <input type="email" name="Email" id="Email" class="form-control" value="hardijayani29@gmail.com" placeholder="Email" disabled>
                            <label for="Email">Email</label>
                            <span id="email-msg"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 first">
                    <p class="mt-4">Location Information</p>
                    <div class="row g-2">
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="Street" id="Street" class="form-control" value="Diamond Park" placeholder="Street" disabled>
                            <label for="Street">Street</label>
                        </div>
                        <div class="form-group form-floating col-md-6 col-sm-12">
                            <input type="text" name="City" id="City" class="form-control" value="Amreli" placeholder="City" disabled>
                            <label for="City">City</label>
                        </div>
                        <div class="row g-2">
                            <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <input type="text" name="State" id="State" class="form-control" value="Gujrat" placeholder="State" disabled>
                            <label for="State">State</label>
                        </div>
                        <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                            <input type="number" name="Zipcode" id="Zipcode" class="form-control" value="364515" placeholder="Zip" disabled>
                            <label for="Zipcode">Zipcode</label>
                        </div>
                            <div class="form-group form-floating col-lg-4 col-md-6 col-sm-12">
                                <a class="btn btn-outline-info btn-lg out back">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10" />
                                        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                    </svg> Map
                        </a>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="g-2 mt-4 first" style="text-align: right;">
                    <button type="submit" class="btn btn-info text-white">Edit</button>
                </div>
</form>
</div>
        </div>
    <script>
        function darkMode() {
            var element = document.body;
            element.classList.toggle("darkMode");
        }
    </script>
</body>

</html>

