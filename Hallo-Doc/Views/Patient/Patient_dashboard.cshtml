
@model Hallo_Doc.Models.ViewModel.DashboardList;
@{
    ViewData["Title"] = "Patient_dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css\bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/patient_dashboard.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .darkMode .content {
            background-color: black;
            color: white;
            box-shadow: 0 4px 8px 0 rgba(256, 256, 256, 0.2), 0 6px 20px 0 rgba(256, 256, 256, 0.19);
        }

        .darkMode .container {
            background-color: black;
            color: white;
        }

        .darkMode th {
            background-color: black;
            color: white;
        }

        .darkMode td {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white flex-column">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="./../images/logo.png" height="65" width="100">
            </a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item d-inline">
                    <p class="navbar-text">Welcome <span style="font-weight: bold;">@Model.UserName</span></p>
                </li>
                <li class="nav-item d-inline">
                    <form class="form-inline my-2 my-lg-0 ">
                        <a class="btn btn-outline-info out back" asp-action="Login" asp-controller="Patient">Logout</a>

                        <a class="btn btn-outline-info mode" onclick="darkMode()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon" viewBox="0 0 16 16">
                                <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                            </svg>
                        </a>

                    </form>
                </li>
            </ul>

        </div>
        <hr>
        <div class="container-fluid">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active"
                   aria-current="page" href="#">Dashboard</a>
            </li>
            <li class="nav-item">
                    <a class="nav-link" asp-controller="Patient" asp-action="Patient_profile">Profile</a>
            </li>
           
        </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <h3>Medical History</h3>
        <form asp-action="Patient_dashboard" asp-controller="Patient">
        <div class="content">
          
            <div class="form-inline my-2 my-lg-0" style="text-align: right;">
                    <button type="button" class="btn btn-outline-info out back" data-toggle="modal" data-target="#exampleModalCenter">Create new Request</button>
            </div>
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header text-white" style="background-color:#0dcaf0">
                                <h5 class="modal-title" id="exampleModalLongTitle">Create New Request</h5>
                                <a class="btn btn-info text-white close" data-dismiss="modal" aria-label="Close" style="text-decoration:none;">
                                    <span aria-hidden="true">&times;</span>
                                </a>
                            </div>
                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row">
                                Here, I want to create a new request for..
                                    </div>
                                    <div class="row">
                                        <div class="col" style="text-align:right;">
                                            <a class="btn btn-info text-white" asp-controller="Patient" asp-action="Submit_req_Me">Me</a>
                                        </div>
                                        <div class="col" style="text-align:left;">
                                            <a class="btn btn-outline-info" asp-controller="Patient" asp-action="Submit_req_Someone">Some One Else</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-info text-white" data-dismiss="modal">Continue</button>
                                <button type="button" class="btn btn-outline-info" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            <table class="table-responsive" style="width:100%">
                <thead class="thead-dark bg-light">
                    <tr class="row" style="padding:5px">
                        <th class="col">Created Date</th>
                        <th class="col-6">Current status</th>
                        <th class="col">Document</th>
                    </tr>
                </thead>
                <tbody >
                    
                        @foreach (var item in Model.RequestWithFiles)
                        {
                            <tr class="row">
                                <td class="col"> @item.Request.CreatedDate</td>
                                <td class="col-6">@item.Request.Status</td>
                                <td class="col">
                                    @if (item.HasFiles)
                                    {
                                        <a class="btn btn-outline-info out back" asp-controller="Patient" asp-action="View_document" asp-route-fileId="@item.Request.fileId">Document(1)</a>
                                    }
                                    else
                                    {
                                        <p> - </p>
                                    }
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
           
        </div>
        </form>
    </div>
    <script>
        function darkMode() {
            var element = document.body;
            element.classList.toggle("darkMode");
        }
    </script>
</body>

</html>
