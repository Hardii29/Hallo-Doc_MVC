@model Hallo_Doc.Models.ViewModel.DashboardList;
@{
    ViewData["Title"] = "View Document";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css\bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/patient_dashboard.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .darkMode .content {
            background-color: black;
            color: white;
            box-shadow: 0 4px 8px 0 rgba(256, 256, 256, 0.2), 0 6px 20px 0 rgba(256, 256, 256, 0.19);
        }

        .darkMode .container {
            background-color: black;
            color: white;
        }

        .darkMode th {
            background-color: black;
            color: white;
        }

        .darkMode td {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white flex-column">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="./../images/logo.png" height="65" width="100">
            </a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item d-inline">
                    <p class="navbar-text">Welcome <span style="font-weight: bold;">Hardi</span></p>
                </li>
                <li class="nav-item d-inline">
                    <form class="form-inline my-2 my-lg-0 ">
                        <a class="btn btn-outline-info out back" asp-action="Login" asp-controller="Patient">Logout</a>

                        <a class="btn btn-outline-info mode" onclick="darkMode()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon" viewBox="0 0 16 16">
                                <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                            </svg>
                        </a>

                    </form>
                </li>
            </ul>

        </div>
        <hr>
        <div class="container-fluid">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active"
                       aria-current="page" href="#">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
        <h3>Documents</h3>
        
            <a class="btn btn-outline-info out back" asp-action="Patient_dashboard" asp-controller="Patient">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>
        <form asp-action="View_document" asp-controller="Patient">
            <div style="border:5px solid #edf4f4; border-radius: 10px;" class="bg-white px-3 pb-3">

                <div class="row pt-3">

                    <p>Patient Name</p>
                    <h3><span class="text-info">Hardi</span>  (MDGFGEUI74D)</h3>

                </div>


                <div class="row pt-2">

                    <p>
                        Check here for any files that you or the doctors of your subsequents requestors have attached for
                        you to review.
                    </p>

                    <div class="input-group mb-3">
                        <input type="file" name="File" class="form-control" placeholder="Select file" aria-label="Select file">
                        <button class="btn btn-info text-white" type="button" for="button-addon2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383" />
                                <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708z" />
                            </svg> Upload
                        </button>
                    </div>

                </div>

                <div class="flex-row d-flex mt-5 mb-3 justify-content-between">

                    <h4>Documents</h4>

                    <button type="button" class="btn btn-outline-info ml-auto dwnld-btn">Download All</button>
                    

                </div>


                <div class="table-responsive mx-0 px-0">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-secondary">
                                <td scope="col">Files</td>
                                <td scope="col">Uploader</td>
                                <td scope="col">Upload Date</td>
                                <td scope="col">Actions</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var file in Model.RequestWiseFiles)
                            {
                            <tr>
                                <td scope="row">@file.FileName</td>
                                <td>Hardi</td>
                                <td>@file.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                        <a class="btn btn-outline-info ml-auto dwnld-btn-mobile" href="@Url.Action("DownloadFile", "Patient", new {fileId = file.RequestWiseFileId})">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-down" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M7.646 10.854a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0-.708-.708L8.5 9.293V5.5a.5.5 0 0 0-1 0v3.793L6.354 8.146a.5.5 0 1 0-.708.708z" />
                                            <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </form>
    </div>
    <script>
        function darkMode() {
            var element = document.body;
            element.classList.toggle("darkMode");
        }
    </script>
</body>

</html>
