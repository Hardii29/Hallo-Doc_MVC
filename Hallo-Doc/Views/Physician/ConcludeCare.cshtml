
@{
    ViewData["Title"] = "Conclude Care";
    Layout = "~/Views/Shared/_PhysicianLayout.cshtml";
}

<body class="bg-light">

    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
            <h3>Conclude Care</h3>

            <a class="btn btn-outline-info out back" asp-action="Admin_dashboard" asp-controller="Admin">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>

        <div class="content">

            <div class="row">

                <p>Patient Name</p>
                <h4 class="text-info" style="margin-top: 0px">Hardi</h4>

            </div>

            <div class="flex-row d-flex mt-2 mb-2 justify-content-between">

                <h4>Encounter Forms</h4>
                <form asp-action="Upload" asp-controller="Physician" enctype="multipart/form-data" method="post">
                    <div class="input-group mb-3">
                        <input type="file" id="upload" hidden />
                        <label for="upload" style="display:inline-block; background-color: white; color: #00bce7; padding: 0.5rem; border-radius: 0.3rem; border: 1px solid #00bce7 "><i class="fa-solid fa-cloud-arrow-up me-1"></i>Upload</label>
                    </div>
                </form>
            </div>


            <div class="table-responsive mx-0 px-0">
                <table class="table table-hover">
                    <thead>
                        <tr class="table-light">
                            <th class="col">Documents</th>
                            <th class="col-1">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col">No Documents</td>
                            <td class="col"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <h6 class="mt-2">Provider Notes</h6>
            <div class="row mb-2">

                <div class="col-md-12 mb-3">
                    <div class="form-group form-floating mt-2">
                        <textarea style="height: 150px;" class="form-control" placeholder="Provider Notes"></textarea>
                        <label>Provider Notes</label>
                    </div>
                </div>

                <div class="d-flex pt-2 justify-content-end">
                    <button type="submit" class="btn btn-info text-white mr-2">Conclude Care</button>
                </div>
            </div>
        </div>

    </div>
   
</body>