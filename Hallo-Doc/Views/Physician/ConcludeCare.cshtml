@model Hallo_Doc.Entity.ViewModel.ViewDocument;
@{
    ViewData["Title"] = "Conclude Care";
    Layout = "~/Views/Shared/_PhysicianLayout.cshtml";
}

<body class="bg-light">

    <div class="container mt-5">
        <div class="flex-row d-flex mt-5 mb-3 justify-content-between">
            <h3>Conclude Care</h3>

            <a class="btn btn-outline-info out back" asp-action="PhysicianDashboard" asp-controller="Physician">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </div>

        <div class="content">

            <div class="row">

                <p>Patient Name</p>
                <h4 class="text-info" style="margin-top: 0px">Hardi</h4>

            </div>

            <div class="flex-row d-flex mt-2 mb-2 justify-content-between">

                <h4>Encounter Forms</h4>
                <form method="post" enctype="multipart/form-data" asp-action="ConcludeCareUpload" asp-controller="Physician">
                    <input type="hidden" value="@Model.RequestId" name="RequestId" />
                    <div class="d-flex justify-content-between bg-light border border-secondary rounded">
                        <button type="button" id="choosenfile" class="col btn text-start text-secondary" onclick="document.getElementById('files').click()">
                            Select File
                        </button>
                        <input id="files" type="file" class="d-none form-control doc_uploder" name="File" asp-for="File">

                        <button type="submit" class="btn btn-info text-white py-2" value="Upload">
                            <i class="fa fa-cloud-upload"></i>
                            <span class="dNone"> Upload </span>
                        </button>
                    </div>
                </form>

            </div>


            <div class="table-responsive mx-0 px-0">
                <table class="table table-hover">
                    <thead>
                        <tr class="table-secondary">
                            <td scope="col" class="col-6">Files</td>
                            <td scope="col" class="col">Upload Date</td>
                            <td scope="col" class="col">Actions</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.documents)
                        {
                            <tr>
                                <td scope="row">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            @file.FileName
                                        </label>
                                    </div>
                                </td>
                                <td>@string.Format("{0:MMM dd, yyyy}", file.CreatedDate)</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="File Actions">
                                        <a class="btn btn-outline-info ml-auto dwnld-btn-mobile m-1" href="@Url.Action("Download_file", "Admin", new {fileId = file.RequestWiseFileID})">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-down" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M7.646 10.854a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0-.708-.708L8.5 9.293V5.5a.5.5 0 0 0-1 0v3.793L6.354 8.146a.5.5 0 1 0-.708.708z" />
                                                <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                                            </svg>
                                        </a>
                                        
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <h6 class="mt-2">Provider Notes</h6>
            <div class="row mb-2">
                <form asp-action="ConcludeCareCase" asp-controller="Physician">
                    <input type="hidden" value="@Model.RequestId" name="RequestId" />
                    <div class="col-md-12 mb-3">
                        <div class="form-group form-floating mt-2">
                            <textarea style="height: 150px;" name="Notes" asp-for="Notes" class="form-control" placeholder="Provider Notes"></textarea>
                            <label>Provider Notes</label>
                        </div>
                    </div>

                    <div class="d-flex pt-2 justify-content-end">
                        <button type="submit" class="btn btn-info text-white mr-2">Conclude Care</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
   
</body>