
@{
    ViewData["Title"] = "Create_request";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css\bootstrap.min.css" rel="stylesheet">
    <link href="~/css/create.css" rel="stylesheet">
    <style>
        .darkMode {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="./../images/logo.png" height="85" width="150">
        </a>
        <form class="form-inline my-2 my-lg-0">
            <a class="btn btn-outline-info mode" onclick="darkMode()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon" viewBox="0 0 16 16">
                    <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                </svg>
            </a>
        </form>
    </nav>
    <div class="container">

        <form class="form-inline my-2 my-lg-0">
            <a type="button" class="btn btn-outline-info back" asp-action="Index" asp-controller="Home">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg> Back
            </a>
        </form>

        <div class="content" style="text-align: center;">
            <h1> I am a..</h1>
            <div class="box" style=" background-color: rgb(195, 195, 235); border-color: rgba(0, 0, 255, 0.74);">
                <h5><a asp-action="Create_patient_req" asp-controller="Patient" style="color: rgba(0, 0, 255, 0.74);">Patient</a></h5>
            </div>
            <div class="box" style=" background-color: rgb(167, 212, 230); border-color: rgb(15, 152, 231);">
                <h5><a asp-action="Create_family_req" asp-controller="Patient" style="color: rgb(15, 152, 231);">Family/Friend</a></h5>
            </div>
            <div class="box" style="background-color: rgb(176, 202, 176); border-color: green;">
                <h5><a asp-action="Create_concierge_req" asp-controller="Patient" style="color: green;">concierge</a></h5>
            </div>
            <div class="box" style=" background-color: pink; border-color: rgb(212, 69, 117);">
                <h5><a asp-action="Create_business_req" asp-controller="Patient" style="color: rgb(212, 69, 117);">business partners</a></h5>
            </div>
        </div>
    </div>
    <script>
        function darkMode() {
            var element = document.body;
            element.classList.toggle("darkMode");
        }
    </script>
</body>
</html>
